<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style xmlns:android="http://schemas.android.com/apk/res/android" name="Default">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="myWindowBackground">@color/background_light</item>
        <item name="desGreenColor">@color/desGreen</item>
        <item name="textColorsMix">@color/black</item>
        <item name="titleBlackGreenColor">@color/titleGreenBlack</item>
        <item name="myTabBackgroundColor">@color/tabBackgroundColor</item>
        <item name="myTabTextColor">@color/tabTextColor</item>
        <item name="myTabTextSelectedColor">@color/tabTextSelectedColor</item>
        <item name="myTabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="myPrimaryTextColor">@color/primaryText</item>
        <item name="mySecondaryTextColor">@color/secondaryText</item>
        <item name="myCardBackgroundColor">@color/white</item>
        <item name="android:theme">@style/Default</item>
    </style>

    <style xmlns:android="http://schemas.android.com/apk/res/android" name="Black">
        <item name="colorPrimary">@color/blackColorPrimary</item>
        <item name="colorPrimaryDark">@color/blackColorPrimaryDark</item>
        <item name="colorAccent">@color/blackColorAccent</item>

        <item name="myWindowBackground">@color/background_night</item>
        <item name="textColorsMix">@color/white</item>
        <item name="desGreenColor">@color/desGreen</item>
        <item name="titleBlackGreenColor">@color/desGreenColorWhite</item>
        <item name="myTabBackgroundColor">@color/blackTabBackgroundColor</item>
        <item name="myTabTextColor">@color/blackTabTextColor</item>
        <item name="myTabTextSelectedColor">@color/blackTabTextSelectedColor</item>
        <item name="myTabIndicatorColor">@color/blackTabIndicatorColor</item>
        <item name="myPrimaryTextColor">@color/blackPrimaryText</item>
        <item name="mySecondaryTextColor">@color/blackSecondaryText</item>
        <item name="myCardBackgroundColor">@color/blackSecondaryText</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>